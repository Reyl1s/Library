@{
    ViewData["Title"] = "Домашняя страница";
}

<p>Добро пожаловать, @User.Identity.Name</p>

<form method="post" asp-controller="Books" asp-action="Index">
    <input type="submit" value="Список книг" />
</form>

@if (this.User.IsInRole("Администратор"))
{
    <form method="post" asp-controller="Users" asp-action="Index">
        <input type="submit" value="Список пользователей" />
    </form>

    <form method="post" asp-controller="Roles" asp-action="Index">
        <input type="submit" value="Список ролей" />
    </form>
}
