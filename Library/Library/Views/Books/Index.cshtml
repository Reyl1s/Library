@model IEnumerable<Library.Database.Entities.Book>
@{
    ViewBag.Title = "Список книг";
}

<h2><strong>Книги</strong></h2>

@if (this.User.IsInRole("Библиотекарь"))
{
    <form method="post" asp-controller="Books" asp-action="Create">
        <input type="submit" value="Добавить книгу" />
    </form>
}

<table class="table">
    <tr bgcolor="#D3D3D3" align="center">
        <td><strong>Название</strong></td>
        <td><strong>Жанр</strong></td>
        <td><strong>Автор</strong></td>
        <td><strong>Издательство</strong></td>
        <td><strong>Доступность</strong></td>
        <td></td>
    </tr>

    @foreach (var item in Model)
    {
        <tr align="center">
            <td>@item.Name</td>
            <td>@item.Genre</td>
            <td>@item.Author</td>
            <td>@item.Publisher</td>
            <td>@item.BookStatus</td>
            @if (this.User.IsInRole("Библиотекарь"))
            {
                <td>
                    <form asp-action="Delete" asp-route-id="@item.Id" method="post">
                        <button type="submit" class="btn btn-sm btn-danger">
                            Удалить
                        </button>
                    </form>
                </td>
            }
            @if (this.User.IsInRole("Клиент"))
            {
                @if(item.BookStatus == Library.Database.Enums.BookStatus.Available)
                {
                    <td>
                        <form method="get" asp-route-id="@item.Id" asp-controller="Orders" asp-action="Booking">
                            <input type="submit" value="Забронировать" />
                        </form>
                    </td>
                }
                else
                {
                    <td>
                        <form asp-route-id="@item.Id" asp-controller="Orders" asp-action="Subscribe">
                            <input type="submit" value="Подписаться" />
                        </form>
                    </td>
                }

            }
        </tr>
    }
</table>